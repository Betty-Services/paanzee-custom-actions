{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "outDir": "typescript/dist",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
    },
    "include": [
        "typescript",
    ],
}